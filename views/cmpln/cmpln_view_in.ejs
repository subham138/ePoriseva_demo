<%- include('../template/header'); %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Search Complaint</h1>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <!-- SELECT2 EXAMPLE -->
                <div class="card card-default">
                    <div class="card-header">
                        <h3 class="card-title">Search Complaint</h3>
                        <div class="card-tools">
                            <img src="/dist/img/BBPS_Logo.png" alt="BBPS" width="350" height="65">
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form action="/search_complain" method="post">
                            <div class="row mt-5">
                                <div class="col-md-4">
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <label for="ComplaintId">Complaint ID</label>
                                        </div>
                                        <div class="col-md-7">
                                            <input type="text" class="form-control" name="ComplaintId" id="ComplaintId" placeholder="Complaint ID" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group row">
                                        <div class="col-md-4"><label>Type of Complaint</label></div>
                                        <div class="col-md-7">
                                            <select class="form-control select2" name="ComplaintType" id="ComplaintType">
                                                <option value="">Select Complaint Type</option>
                                                <option value="Transaction">Transaction</option>
                                                <option value="Service">Service</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <center><button type="submit" class="btn btn-outline-success mt-4" id="submit">Submit</button></center>
                        </form>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%- include('../template/footer'); %>